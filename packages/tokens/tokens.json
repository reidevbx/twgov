{
  "primitive": {
    "color": {
      "blue": {
        "500": "#2C84B2",
        "light-500": "#6B9FE8"
      },
      "teal": {
        "50": "#EAF0F0",
        "100": "#B0C4C5",
        "500": "#618D90",
        "700": "#3A5050",
        "800": "#1E2A2A",
        "light-500": "#89B5B8"
      },
      "neutral": {
        "0": "#FFFFFF",
        "100": "#E8E8E8",
        "400": "#A0A0A0",
        "600": "#595959",
        "800": "#1A1A1A"
      },
      "red": {
        "300": "#F87171",
        "500": "#C3362B"
      },
      "green": {
        "300": "#4ADE80",
        "500": "#00804A"
      },
      "yellow": {
        "300": "#FBBF24",
        "500": "#F0AB00",
        "focus": "#fd0"
      },
      "purple": {
        "500": "#6B3FA0"
      }
    },
    "space": {
      "1": "4px",
      "2": "8px",
      "3": "12px",
      "4": "16px",
      "5": "20px",
      "6": "24px",
      "8": "32px",
      "10": "40px",
      "12": "48px",
      "16": "64px"
    },
    "radius": {
      "sm": "4px",
      "md": "8px",
      "lg": "12px"
    },
    "font": {
      "family": {
        "sans": "\"Noto Sans TC\", \"Microsoft JhengHei\", system-ui, -apple-system, BlinkMacSystemFont, \"Segoe UI\", sans-serif",
        "mono": "\"Noto Sans Mono\", \"SF Mono\", Monaco, \"Cascadia Code\", Menlo, monospace"
      },
      "size": {
        "xs": "0.75rem",
        "sm": "0.875rem",
        "base": "1rem",
        "lg": "1.125rem",
        "xl": "1.25rem",
        "2xl": "1.5rem",
        "3xl": "1.875rem",
        "4xl": "2.25rem"
      },
      "weight": {
        "regular": "400",
        "medium": "500",
        "bold": "700"
      }
    },
    "focus": {
      "width": "3px"
    }
  },

  "semantic": {
    "color": {
      "brand": {
        "primary": "{primitive.color.blue.500}",
        "secondary": "{primitive.color.teal.500}"
      },
      "text": {
        "primary": "{primitive.color.neutral.800}",
        "secondary": "{primitive.color.neutral.600}",
        "on-primary": "{primitive.color.neutral.0}"
      },
      "bg": {
        "canvas": "{primitive.color.neutral.0}",
        "surface": "{primitive.color.teal.50}"
      },
      "border": {
        "default": "{primitive.color.teal.100}"
      },
      "feedback": {
        "error": "{primitive.color.red.500}",
        "success": "{primitive.color.green.500}",
        "warning": "{primitive.color.yellow.500}",
        "info": "{primitive.color.blue.500}"
      },
      "link": {
        "default": "{primitive.color.blue.500}",
        "visited": "{primitive.color.purple.500}"
      }
    },
    "spacing": {
      "1": "{primitive.space.1}",
      "2": "{primitive.space.2}",
      "3": "{primitive.space.3}",
      "4": "{primitive.space.4}",
      "5": "{primitive.space.5}",
      "6": "{primitive.space.6}",
      "8": "{primitive.space.8}",
      "10": "{primitive.space.10}",
      "12": "{primitive.space.12}",
      "16": "{primitive.space.16}"
    },
    "focus": {
      "color": "{primitive.color.yellow.focus}",
      "width": "{primitive.focus.width}"
    },
    "radius": {
      "sm": "{primitive.radius.sm}",
      "md": "{primitive.radius.md}",
      "lg": "{primitive.radius.lg}"
    },
    "font": {
      "sans": "{primitive.font.family.sans}",
      "mono": "{primitive.font.family.mono}",
      "family-base": "{primitive.font.family.sans}",
      "family-mono": "{primitive.font.family.mono}",
      "size": {
        "xs": "{primitive.font.size.xs}",
        "sm": "{primitive.font.size.sm}",
        "base": "{primitive.font.size.base}",
        "lg": "{primitive.font.size.lg}",
        "xl": "{primitive.font.size.xl}",
        "2xl": "{primitive.font.size.2xl}",
        "3xl": "{primitive.font.size.3xl}",
        "4xl": "{primitive.font.size.4xl}"
      },
      "weight": {
        "regular": "{primitive.font.weight.regular}",
        "medium": "{primitive.font.weight.medium}",
        "bold": "{primitive.font.weight.bold}"
      }
    }
  },

  "themes": {
    "dark": {
      "color": {
        "brand": {
          "primary": "{primitive.color.blue.light-500}",
          "secondary": "{primitive.color.teal.light-500}"
        },
        "text": {
          "primary": "{primitive.color.neutral.100}",
          "secondary": "{primitive.color.neutral.400}",
          "on-primary": "{primitive.color.neutral.800}"
        },
        "bg": {
          "canvas": "{primitive.color.neutral.800}",
          "surface": "{primitive.color.teal.800}"
        },
        "border": {
          "default": "{primitive.color.teal.700}"
        },
        "feedback": {
          "error": "{primitive.color.red.300}",
          "success": "{primitive.color.green.300}",
          "warning": "{primitive.color.yellow.300}",
          "info": "{primitive.color.blue.light-500}"
        },
        "link": {
          "default": "{primitive.color.blue.light-500}",
          "visited": "{primitive.color.purple.500}"
        }
      }
    }
  },

  "component": {
    "button": {
      "font-family": "{semantic.font.sans}",
      "font-weight": "{primitive.font.weight.medium}",
      "border-radius": "{semantic.radius.md}",
      "primary-bg": "{semantic.color.brand.primary}",
      "primary-color": "{semantic.color.text.on-primary}",
      "secondary-bg": "{semantic.color.bg.surface}",
      "secondary-color": "{semantic.color.text.primary}",
      "secondary-border-color": "{semantic.color.border.default}",
      "danger-bg": "{semantic.color.feedback.error}",
      "danger-color": "{semantic.color.text.on-primary}",
      "disabled-opacity": "0.5",
      "focus-color": "{semantic.focus.color}",
      "focus-width": "{semantic.focus.width}"
    },
    "input": {
      "font-family": "{semantic.font.sans}",
      "font-size": "{semantic.font.size.base}",
      "color": "{semantic.color.text.primary}",
      "bg": "{semantic.color.bg.canvas}",
      "border-color": "{semantic.color.text.primary}",
      "border-radius": "{semantic.radius.sm}",
      "hint-color": "{semantic.color.text.secondary}",
      "error-color": "{semantic.color.feedback.error}",
      "disabled-bg": "{semantic.color.bg.surface}",
      "focus-color": "{semantic.focus.color}",
      "focus-width": "{semantic.focus.width}"
    },
    "checkbox": {
      "size": "40px",
      "border-color": "{semantic.color.text.primary}",
      "border-radius": "{semantic.radius.sm}",
      "bg": "{semantic.color.bg.canvas}",
      "check-color": "{semantic.color.brand.primary}",
      "label-color": "{semantic.color.text.primary}",
      "focus-color": "{semantic.focus.color}",
      "focus-width": "{semantic.focus.width}"
    },
    "textarea": {
      "font-family": "{semantic.font.sans}",
      "font-size": "{semantic.font.size.base}",
      "color": "{semantic.color.text.primary}",
      "bg": "{semantic.color.bg.canvas}",
      "border-color": "{semantic.color.text.primary}",
      "border-radius": "{semantic.radius.sm}",
      "hint-color": "{semantic.color.text.secondary}",
      "error-color": "{semantic.color.feedback.error}",
      "disabled-bg": "{semantic.color.bg.surface}",
      "focus-color": "{semantic.focus.color}",
      "focus-width": "{semantic.focus.width}"
    },
    "fieldset": {
      "legend-color": "{semantic.color.text.primary}",
      "hint-color": "{semantic.color.text.secondary}",
      "error-color": "{semantic.color.feedback.error}"
    }
  }
}
